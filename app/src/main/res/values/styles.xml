<resources>

    <!-- text variant -->

    <style name="txt.title" parent="txt.h1.medium">
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="txt.desc" parent="txt.h0.light">
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <!--button-->

    <style name="btn.colored" parent="Widget.MaterialComponents.Button">
        <item name="fontWeight">700</item>
        <item name="android:layout_height">55dp</item>
        <item name="shapeAppearance">@style/appearance.round.constant</item>
        <item name="android:textAppearance">@style/txt.h2.bold</item>

        <item name="iconSize">@dimen/icon_normal</item>
        <item name="iconGravity">end</item>
    </style>

    <style name="btn.colored.big" parent="Widget.MaterialComponents.Button">
        <item name="fontWeight">700</item>
        <item name="shapeAppearance">@style/appearance.round.constant</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:textAppearance">@style/txt.h3.bold</item>
    </style>

    <style name="btn.outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontWeight">700</item>
        <item name="android:layout_height">62dp</item>
        <item name="shapeAppearance">@style/appearance.round.constant</item>
        <item name="android:textAppearance">@style/txt.h2.bold</item>
    </style>

    <style name="btn.toggle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontWeight">400</item>
        <item name="android:layout_height">36dp</item>
        <item name="iconSize">@dimen/icon_normal</item>
        <item name="shapeAppearance">@style/appearance.round.constant</item>
        <item name="android:textAppearance">@style/txt.h1.medium</item>
        <item name="android:textColor">@color/selector_toggle_button_text</item>
        <item name="backgroundTint">@color/selector_toggle_button_background</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">?attr/colorSecondary</item>
        <item name="rippleColor">?attr/colorSecondaryVariant</item>
    </style>

    <style name="btn.text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="fontWeight">700</item>
        <item name="shapeAppearance">@style/appearance.round.constant</item>
        <item name="android:textAppearance">@style/txt.h1.bold</item>
    </style>

    <style name="btn.circle" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/appearance.round.50</item>
        <item name="android:textAppearance">@style/txt.h4.medium</item>
        <item name="fontWeight">700</item>
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:layout_margin">8dp</item>
        <!--        <item name="textColor">?colorOnBackground</item>-->
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!--	text input-->

    <style name="input.outline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">?attr/colorSecondary</item>
        <item name="prefixTextColor">?attr/colorSecondary</item>
        <item name="hintTextAppearance">@style/txt.h3.bold</item>
        <item name="prefixTextAppearance">@style/txt.h3.bold</item>
        <item name="shapeAppearance">@style/appearance.round.constant</item>
        <!--        <item name="hintAnimationEnabled">false</item>-->
    </style>

    <style name="input.outline.menu" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintTextAppearance">@style/txt.h4.regular</item>
    </style>

    <!--    card view-->

    <style name="card.round" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/corner_radius_constant</item>
    </style>


</resources>
